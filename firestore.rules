rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    function isEmployee() {
      return request.auth.token.role == 'employee';
    }
    
    function isBroker() {
      return request.auth.token.role == 'broker';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwnCompany(companyId) {
      return request.auth.uid == companyId;
    }
    
    // Users collection - Admins can read/write all, users can read own
    match /users/{userId} {
      allow read: if isAuthenticated() && (isAdmin() || request.auth.uid == userId);
      allow write: if isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAdmin() || (request.auth.uid == userId && resource.data.approved == false);
    }
    
    // Pending accounts collection
    match /pending_accounts/{docId} {
      allow read: if isAdmin();
      allow create: if request.auth == null; // Public can submit
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Inventory collection - Role-based access
    match /inventory/{docId} {
      allow read: if isAuthenticated() && (isAdmin() || isEmployee() || isBroker());
      allow create: if isBroker() && request.resource.data.companyId == request.auth.uid;
      allow update: if isAdmin() || (isBroker() && resource.data.companyId == request.auth.uid);
      allow delete: if isAdmin() || (isBroker() && resource.data.companyId == request.auth.uid);
    }
    
    // Admin logs
    match /admin_logs/{docId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
